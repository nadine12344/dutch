@model ContactViewModel
@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}
<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="Name">Name:</label>
        <br />
        <input asp-for="Name" type="text" />
        <span asp-validation-for="Name"></span>
        <br />
        <label asp-for="Email">Email:</label>
        <br />
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email"></span>

        <br />
        <label asp-for="Subject">Subject:</label>
        <br />
        <input asp-for="Subject" type="text" />
        <span asp-validation-for="Subject"></span>

        <br />
        <label asp-for="Message">Message:</label>
        <br />
        <textarea asp-for="Message" name="message" rows="4"></textarea>
        <span asp-validation-for="Message"></span>

        <br />
        <input type="submit" value="Send Message" />
        <div>@ViewBag.UserMessage</div>
    </form></div>
</div>